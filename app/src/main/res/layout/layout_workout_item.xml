<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/checkBoxView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxView"
        app:layout_constraintEnd_toStartOf="@+id/setView"
        app:layout_constraintStart_toEndOf="@+id/checkBoxView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Sets: "
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxView"
        app:layout_constraintEnd_toStartOf="@+id/setsTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/setsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>